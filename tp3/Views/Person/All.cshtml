@foreach(Person person in Model){
    <div style="border-style:solid; border-width: 0.5px; border-radius : 10px; margin:auto; padding-left:80px;">
        <div class="row" style="margin-top: 20px">
            <div class="col-8">
                <img src="@person.image" />
            </div>
        </div>
        <div class="row">
            <div class="col">ID</div>
            <div class="col-10">
                @person.id
            </div>
        </div>
        <div class="row">
            <div class="col">First Name</div>
            <div class="col-10">
                @person.firstName
            </div>
        </div>
        <div class="row">
            <div class="col">Last Name</div>
            <div class="col-10">
                @person.lastName
            </div>
        </div>
        <div class="row">
            <div class="col">Birthday</div>
            <div class="col-10">
                @person.dateBirth
            </div>
        </div>
        <div class="row">
            <div class="col">Email</div>
            <div class="col-10">
                @person.email
            </div>
        </div>
        <div class="row"  style="margin-bottom: 20px">
            <div class="col">Country</div>
            <div class="col-10">
                @person.country
            </div>
        </div>
     </div>  
     <p></p>
}
